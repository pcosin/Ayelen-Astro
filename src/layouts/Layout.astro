<style is:global>
@font-face {
  font-family: "Sedan SC Regular";
  font-style: normal;
  font-weight: normal;
  src: url("/fonts/sedan-sc/SedanSC-Regular.ttf") format("woff");
}

@font-face {
  font-family: "Sedan Regular";
