---
import logo from '../assets/img/logo.png';
---


<header class="primary-header">
    <div class="nav-wrapper flex">
      <div class="logo">
        <a href="index.html"><img src={logo} alt="Logo de la justicia" /> </a>
        <a href="index.html"
          ><h1>
            Ayelén<br />
            María Gaitán
          </h1></a
        >
      </div>

      <button class="mobile-nav-toggle" aria-controls="primary-navigation">
        <span class="sr-only" aria-expanded="false">Menu</span>
      </button>
      <nav class="flex-end-nav">
        <ul id="primary-navigation" data-visible="false" class="primary-navigation flex">
          <li class="active">
            <a class="nav-item" href="index.html">Inicio</a>
          </li>
          <li><a class="nav-item" href="sobre-mi.html">Sobre mí</a></li>

          <li><a class="nav-item" href="servicios.html">Servicios</a></li>
          <li><a class="nav-item" href="contacto.html">Contacto</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <style>

/* ------------------- */
/* Nav */
/* ------------------- */

.primary-header {
  position: fixed;
  top: 0;
  left: 0;
  background-color: var(--color-white);
  width: 100%;
  z-index: 999;
  box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.5);
}

.nav-wrapper {
  position: relative;
  width: min(100% - 2rem, 1440px);
  margin-inline: auto;
  justify-content: space-between;
  align-items: center;
}

.logo {
  display: flex;
}

.logo h1 {
  color: var(--color-ligth-blue);
  font-size: 1.3rem;
  font-family: "Sedan SC Regular";
}

.nav-item {
  position: relative;
  font-size: 1.25rem;
  padding-inline: 1rem;
  font-family: "Sedan SC Regular";
  transition: ease-in-out;
}

.nav-item:hover {
  color: var(--color-ligth-blue);
}

.nav-item::before {
  content: "";
  position: absolute;
  background-color: var(--color-grey);
  width: 1px;
  height: 90%;
  bottom: 0;
  left: -12px;
}

.mobile-nav-toggle {
  display: none;
}

@media (max-width: 785px) {
  .primary-navigation {
    list-style: none;
    position: fixed;
    z-index: 1000;
    inset: 0 0 0 40%;
    margin: 0;
    flex-direction: column;
    background-color: var(--color-blue);
    color: #fff;
    transform: translateX(100%);
    transition: transform 500ms ease-in-out;
    padding-top: 2rem;
  }

  .primary-navigation[data-visible="true"] {
    transform: translateX(0);
  }
  .mobile-nav-toggle {
    display: block;
    position: absolute;
    z-index: 2000;
    right: 1rem;
    background: transparent;
    background-image: url(../img/shared/icon-hamburger.svg);
    background-repeat: no-repeat;
    width: 1.5rem;
    aspect-ratio: 1;
    border: 0;
    cursor: pointer;
  }

  .mobile-nav-toggle[aria-expanded="true"] {
    background-image: url(../img/shared/icon-close.svg);
  }

  .mobile-nav-toggle:focus-visible {
    outline: 5px solid var(--color-grey);
    outline-offset: 5px;
  }

  .active a::before {
    content: "\2022";
    height: 15px;
    width: 10px;
    left: -10px;
    bottom: 30%;
    transform: translate(-50%);
    color: #fff;
    position: absolute;
  }

  .active a::after {
    display: none;
  }

  .nav-item::before {
    display: none;
  }
}

  </style>